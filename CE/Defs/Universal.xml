      <!--=====-->
      <massFactor>0.032</massFactor>
      <warmupTimeFactor>-0.07</warmupTimeFactor>
      <additionalFactors>
        <li Class="ModularWeapons_CEModule.MWP_CEStats">
          <swayFactor>0.015</swayFactor>
          <bulk>0.05</bulk>
          <recoilAmount>-0.01</recoilAmount>
          <sightsEfficiency>0.15</sightsEfficiency>
        </li>
      </additionalFactors>
      <!--=====-->
    </ModularWeapons.ModularPartDef>

    <!-- lightbox -->

    <ModularWeapons.ModularPartDef Name="UWCEI_Lightbox_Base" Abstract="True">
