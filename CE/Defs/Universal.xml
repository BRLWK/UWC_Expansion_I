    <!-- Red dot -->

    <ModularWeapons.ModularPartDef Name="UWCEI_Reddot_Base" Abstract="True">
      <label>Red dot sight</label>
      <description>Red dot sight allowing for increased accuracy.</description>
      <!--=====-->
      <massFactor>0.05</massFactor>
      <warmupTimeFactor>0.05</warmupTimeFactor>
      <additionalFactors>
        <li Class="ModularWeapons_CEModule.MWP_CEStats">
          <sightsEfficiency>0.11</sightsEfficiency>
          <bulk>0.04</bulk> 
        </li>
      </additionalFactors>
      <!--=====-->
    </ModularWeapons.ModularPartDef>

    <!-- Holo -->

    <ModularWeapons.ModularPartDef Name="UWCEI_Holo_Base" Abstract="True">
      <label>Holographic sight</label>
      <description>2x holographic sight.</description>
      <!--=====-->
      <massFactor>0.12</massFactor>
      <warmupTimeFactor>0.15</warmupTimeFactor>
      <additionalFactors>
        <li Class="ModularWeapons_CEModule.MWP_CEStats">
          <sightsEfficiency>0.66</sightsEfficiency> <!-- 1.12 x0.2 -->
          <bulk>0.08</bulk>
        </li>
      </additionalFactors>
      <!--=====-->
      <researchPrerequisites>
        <li>MicroelectronicsBasics</li>
      </researchPrerequisites>
