      </additionalFactors>
      <!--=====-->
    </ModularWeapons.ModularPartDef>

    <!-- Smart Dot -->

    <ModularWeapons.ModularPartDef Name="UWCEI_Smartdot_Base" Abstract="True">
      <label>Smart dot</label>
      <description>Special optic with aim assistance and night vision capability.</description>
      <!--=====-->
      <massFactor>0.08</massFactor>
      <warmupTimeFactor>0.17</warmupTimeFactor>
      <additionalFactors>
        <li Class="ModularWeapons_CEModule.MWP_CEStats">
          <sightsEfficiency>0.5</sightsEfficiency>
          <bulk>0.09</bulk>
        </li>
      </additionalFactors>
      <statModifiers>
          <AimingAccuracy>0.1</AimingAccuracy>
          <ShootingAccuracyPawn>0.1</ShootingAccuracyPawn>
          <NightVisionEfficiency_Weapon>0.2</NightVisionEfficiency_Weapon>
      </statModifiers>
      <!--=====-->
      <costList>
        <Plasteel>5</Plasteel>
        <ComponentIndustrial>5</ComponentIndustrial>
      </costList>
      <researchPrerequisites>
        <li>Fabrication</li>
      </researchPrerequisites>
    </ModularWeapons.ModularPartDef>

