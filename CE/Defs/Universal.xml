      <massFactor>0.048</massFactor>
      <flashlightFactor>true</flashlightFactor>
      <warmupTimeFactor>-0.1</warmupTimeFactor>
      <additionalFactors>
        <li Class="ModularWeapons_CEModule.MWP_CEStats">
          <swayFactor>0.019</swayFactor>
