<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Flashlight -->

    <ModularWeapons.ModularPartDef Name="UWCEI_Flashlight_Base" Abstract="True">
      <label>Flashlight</label>
      <description>Fore-mounted flashlight.</description>
      <!--=====-->
      <massFactor>0.032</massFactor>
      <flashlightFactor>true</flashlightFactor>
      <warmupTimeFactor>-0.03</warmupTimeFactor>
      <additionalFactors>
        <li Class="ModularWeapons_CEModule.MWP_CEStats">
          <swayFactor>0.03</swayFactor>
          <bulk>0.08</bulk>
          <recoilAmount>-0.02</recoilAmount>
          <sightsEfficiency>0.05</sightsEfficiency>
        </li>
      </additionalFactors>
      <!--=====-->
    </ModularWeapons.ModularPartDef>

    <!-- Laser -->

    <ModularWeapons.ModularPartDef Name="UWCEI_Laser_Base" Abstract="True">
      <label>Laser sight</label>
