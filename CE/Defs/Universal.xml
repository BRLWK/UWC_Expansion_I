    <!-- ACOG -->

    <ModularWeapons.ModularPartDef Name="UWCEI_ACOG_Base" Abstract="True">
      <label>ACOG scope</label>
      <description>4x ACOG scope.</description>
      <!--=====-->
      <massFactor>0.32</massFactor>
      <warmupTimeFactor>0.25</warmupTimeFactor>
      <additionalFactors>
        <li Class="ModularWeapons_CEModule.MWP_CEStats">
          <sightsEfficiency>1.24</sightsEfficiency>
